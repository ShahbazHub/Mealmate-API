            <form asp-area="Admin" asp-controller="Menu" asp-action="Create"
                  id="CreateMenu">
                @Html.AntiForgeryToken()
                <!--begin::Row-->
                <div class="card card-custom">
                    <div class="card-header flex-wrap border-0 pt-6 pb-0">
                        <div class="card-title">
                            <h3 class="card-label">
                                Create New Menu
                                <span class="d-block text-muted pt-2 font-size-sm">
                                    Register a menu in restaurant
                                </span>
                            </h3>
                        </div>
                        <div class="card-toolbar">
                        </div>
                    </div>
                    <div class="card-body">

                        <div class="row form-group">
                            <div class="col-md-6">
                                <label class="col-form-label font-weight-bolder">Branch &amp; Hall</label>
                                <select class="custom-select" asp-for="HallId" asp-items="Model.Halls">
                                    <option value="">Select From List</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="col-form-label font-weight-bolder">Menu Type</label>
                                <select class="custom-select" asp-for="MenuTypeId" asp-items="Model.MenuTypes">
                                    <option value="">Select From List</option>
                                </select>
                            </div>
                            <div class="col-md-12">
                                <label class="col-form-label font-weight-bolder">Name</label>
                                <input type="text" asp-for="Title" class="form-control" />
                            </div>

                            <div class="col-md-12">
                                <label class="col-form-label font-weight-bolder">Description</label>
                                <textarea type="text" asp-for="Description" class="form-control" rows="4"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Row-->

                <div class="card card-custom mt-4">
                    <div class="card-header flex-wrap border-0 pt-6 pb-0">
                        <div class="card-title">
                            <h3 class="card-label">
                                Menu Items
                                <span class="d-block text-muted pt-2 font-size-sm">
                                    Menu items in this menu
                                </span>
                            </h3>
                        </div>
                        <div class="card-toolbar">
                            <!--begin::Button-->
                            <button class="btn btn-primary font-weight-bolder" id="BtnNewMenuItem">
                                <span class="svg-icon svg-icon-md">
                                    <!--begin::Svg Icon | path:assets/media/svg/icons/Design/Flatten.svg-->
                                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                            <rect x="0" y="0" width="24" height="24"></rect>
                                            <circle fill="#000000" cx="9" cy="15" r="6"></circle>
                                            <path d="M8.8012943,7.00241953 C9.83837775,5.20768121 11.7781543,4 14,4 C17.3137085,4 20,6.6862915 20,10 C20,12.2218457 18.7923188,14.1616223 16.9975805,15.1987057 C16.9991904,15.1326658 17,15.0664274 17,15 C17,10.581722 13.418278,7 9,7 C8.93357256,7 8.86733422,7.00080962 8.8012943,7.00241953 Z" fill="#000000" opacity="0.3"></path>
                                        </g>
                                    </svg>
                                    <!--end::Svg Icon-->
                                </span>
                                New Record
                            </button>
                            <!--end::Button-->
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-custom alert-notice alert-light-primary fade show" role="alert">
                            <div class="alert-icon"><i class="flaticon-warning"></i></div>
                            <div class="alert-text">
                                Click on <strong>New Record</strong> to create a new menu item.
                            </div>
                            <div class="alert-close">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true"><i class="ki ki-close"></i></span>
                                </button>
                            </div>
                        </div>

                        <div id="MenuItems">
                            @foreach (var item in Model.MenuItems)
                            {
                                await Html.RenderPartialAsync("MenuItem", item);
                            }
                        </div>

                        <hr />
                        <div class="row form-group">
                            <div class="col-md-12">
                                <button type="reset" class="btn btn-secondary float-right">Cancel</button>
                                <button type="submit" class="btn btn-success float-right mr-2">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>

            </form>

        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
