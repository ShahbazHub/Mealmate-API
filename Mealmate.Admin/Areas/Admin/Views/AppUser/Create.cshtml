@model UserCreateViewModel
@{
    Layout = null;
}


<div class="modal fade" id="invite-seminar" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">
                    Create User
                </h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <form asp-area="Admin" asp-controller="AppUser" asp-action="Create"
                      method="post" autocomplete="off">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    @Html.AntiForgeryToken()
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="col-form-label">Name</label>
                            <input type="text" asp-for="Name" class="form-control" />
                        </div>
                        <div class="col-md-12">
                            <label class="col-form-label">Email</label>
                            <input type="text" asp-for="Email" class="form-control" />
                        </div>
                        <div class="col-md-12">
                            <label class="col-form-label">Phone Number</label>
                            <input type="text" asp-for="Phone" class="form-control" />
                        </div>

                        <div class="col-md-12 mt-8">
                            <h4 style="border-bottom: 1px solid rgba(0,0,0, 0.1); padding-bottom: 5px;">Login Credentials</h4>
                        </div>

                        <div class="col-md-12">
                            <label class="col-form-label">Username</label>
                            <input type="text" asp-for="Username" class="form-control" />
                        </div>

                        <div class="col-md-12 ">
                            <label class="col-form-label">Password</label>
                            <input type="password" asp-for="Password" class="form-control" />
                        </div>

                        <div class="col-md-12 ">
                            <label class="col-form-label">Confirm Password</label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-save="modal-user">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>