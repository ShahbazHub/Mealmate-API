    <script>
        $(function () {
            $("ul.menu-nav li:eq(5)").addClass("menu-item-active");

            $("#BtnSearch").on("click", function (e) {
                e.preventDefault();
                // let id = $("#RoleId option:selected").val();

                loadUsers();
            });

            var placeholderElement = $('#modal-placeholder');
            $('button[data-toggle="ajax-modal-user"]').click(function (event) {
                event.preventDefault();
                var url = $(this).data('url');
                $.get(url).done(function (data) {
                    placeholderElement.html(data);
                    placeholderElement.find('.modal').modal('show');
                });
            });

            placeholderElement.on('click', '[data-save="modal-user"]', function (event) {
                event.preventDefault();

                var form = $(this).parents('.modal').find('form');
                var actionUrl = form.attr('action');
                var dataToSend = form.serialize();

                $.post(actionUrl, dataToSend).done(function (data) {
                    var newBody = $('.modal-body', data);
                    placeholderElement.find('.modal-body').replaceWith(newBody);

                    // find IsValid input field and check it's value
                    // if it's valid then hide modal window
                    var isValid = newBody.find('[name="IsValid"]').val() == 'True';
                    if (isValid) {
                        toastr.success("Record saved successfully");
                        placeholderElement.find('.modal').modal('hide');

                        loadUsers();
                    }
                });
            });

            $("#user-data").delegate(".js-update", "click", function (event) {
                event.preventDefault();
                let btn = $(this);
                let id = btn.attr('data-id');

                console.log(id);
                $.ajax({
                    url: btn.attr('href'),
                    type: 'GET',
                    data: { id: id },
                    success: function (response) {
                        var placeholderElement = $('#modal-placeholder');
                        placeholderElement.html(response);
                        placeholderElement.find('.modal').modal('show');
                    },
                    error: function () {}
                });

            });

            $("#user-data").delegate(".js-toggle", "click", function (event) {
                event.preventDefault();
                let btn = $(this);
                let id = btn.attr('data-id');

                bootbox.confirm("Are you sure to toggle the user status?", function (result) {
                    if (result) {

                        $.ajax({
                            url: btn.attr('href'),
                            type: 'DELETE',
                            data: { id: id },
                            success: function (response) {
                                if (response.status == true) {
                                    toastr.success(response.message);
                                    loadUsers();
                                }
                                else {
                                    toastr.error(response.message);
                                }
                            },
                            error: function () {
                                toastr.error("Error has occured");
                            }
                        });
                    }
                });
            });
        });
    </script>
