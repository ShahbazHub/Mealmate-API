@model IEnumerable<RestaurantListViewModel>
@{
    Layout = null;
}


<table class="table table-responsive-lg table-checkable" id="kt_datatable">
    <thead>
        <tr>
            <th title="Field #1">Restaurant</th>
            <th title="Field #2">Address</th>
            <th title="Field #3">Email</th>
            <th title="Field #4">Phone</th>
            <th title="Field #7">Halls</th>
            <th title="Field #7">Status</th>
            <th title="Field #8">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var StateBadge = item.StateId == 1 ? "success" : "danger";
            var State = item.StateId == 1 ? "Active" : "Passive";

            var Role = item.StateId == 1 ? "Active" : "Passive";
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Address
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Phone
                </td>
                <td>
                    @item.Halls
                </td>
                <td>
                    <span class="label label-lg font-weight-bold label-light-@StateBadge label-inline">
                        @State
                    </span>
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="Restaurant" asp-action="Update"
                       data-id="@item.RestaurantId"
                       class="btn btn-sm btn-clean btn-icon btn-icon-md js-update" title="Edit">
                        <i class="fa fa-pencil-alt"></i>
                    </a>

                    @if (item.StateId == 1)
                    {
                        <a asp-area="Admin" asp-controller="Restaurant" asp-action="Toggle"
                           data-id="@item.RestaurantId"
                           class="btn btn-sm btn-clean btn-icon btn-icon-md js-toggle"
                           title="Set passive">
                            <i class="fa fa-thumbs-down text-danger"></i>
                        </a>
                    }
                    else
                    {
                        <a asp-area="Admin" asp-controller="Restaurant" asp-action="Toggle"
                           data-id="@item.RestaurantId"
                           class="btn btn-sm btn-clean btn-icon btn-icon-md js-toggle"
                           title="Set active">
                            <i class="fa fa-thumbs-up text-success"></i>
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
